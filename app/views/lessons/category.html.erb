
    <div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path 'banner.jpg' %>);">
      <div class="banner-content">
        <h1 class="logo">
          <%= link_to root_path do %>
            <%= image_tag "logo-large.png" %>
          <% end %>
          <p>Learn what ever, whenever... that's it !</p>
        </h1>
      </div>
    </div>

    <div class="wrapper-grey padded">
      <div class="container">
        <div class="row">
          <div class="description">
            <div class="col-xs-8 col-sm-4">

              <h3 class='description-title'>Skills</h3>
              <%= image_tag 'skills.png', class:'description-image' %>
              <p>Develop sought-after skills for the current job market</p>
            </div>
            <div class="col-xs-8 col-sm-4">
              <h3 class='description-title'>Coaching</h3>
              <%= image_tag 'growth.png', class:'description-image' %>
              <p>A coach to motivate you to achieve your goal</p>
            </div>
            <div class="col-xs-8 col-sm-4">
              <h3 class='description-title'>Rewards</h3>
              <%= image_tag 'award.png', class:'description-image' %>
              <p>Our certificates and degrees are officially recognized internationally</p>
            </div>
          </div>
          <div class="category-list" id="lessons_list">
            <div class="description-title">
            <h5>Hundreds of available courses, organized by categories</h5>
            </div>
              <ul class="list-category list-unstyled list-inline">
                <li class="card-category cat-4"><%= link_to 'all', lessons_path + '#lessons_list' %></li>
                <li class="card-category cat-1"><%= link_to 'music', lessons_path + '/category/Music#lessons_list' %></li>
                <li class="card-category cat-2"><%= link_to 'language', lessons_path + '/category/Language#lessons_list' %></li>
                <li class="card-category cat-3"><%= link_to 'science', lessons_path + '/category/Science#lessons_list' %></li>
                <li class="card-category cat-4"><%= link_to 'culture', lessons_path + '/category/Culture#lessons_list' %></li>
                <li class="card-category cat-5"><%= link_to 'entrepreneurship', lessons_path + '/category/Entrepreneurship#lessons_list' %></li>
                <li class="card-category cat-6"><%= link_to 'sport', lessons_path + '/category/Sport#lessons_list' %></li>
                <li class="card-category cat-7"><%= link_to 'finance', lessons_path + '/category/Finance#lessons_list' %></li>
              </ul>
          </div>
        </div>
        <div class="text-center padded" id="newsletter">
          <% if @lessons.empty? %>
            <h3>No lessons available yet...</h3>
            <p>Do you want to receive an email as soon as a new lesson is available?</p>
            <form class="form-inline">
              <input type="email" placeholder="your email" class="form-control">
              <input type="submit" value="Get informed" class="btn btn-success btn-bordered btn-bordered-primary">
            </form>          <% end %>
        <div class="row">
          <div id="lessons">
          <% @lessons.each do |lesson| %>
            <div class="lesson">
              <div class="col-sm-3 lesson-card">
                  <a class="card" href="lessons/<%= lesson.id %>">
                  <span class="card-category cat-<%= lesson.category_number %>"><%= lesson.category %></span>
                  <h2 class="card-name"><%= lesson.name %></h2>
                  <span class="lesson-informationLabel">
                    <i class="lesson-informationIcon  icon-calendar3"></i>
                    6 mois | Paris
                  </span>
                  <p class="card-description"><%= lesson.category %></p>
                  <p class="show-lesson show-lesson-cat-<%= lesson.category_number %>">Show lesson</p>
                </a>
              </div>
            </div>
          <% end %>



          </div>
        </div>
      </div>
    </div>


  </body>
</html>


