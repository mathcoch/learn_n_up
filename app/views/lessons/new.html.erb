  <%= javascript_tag do %>
    $('document').ready(function(){
      $('#music').on('click', function(event) {
        $('#lesson_category').val('Music');
        $('.list-inline li').removeClass('description-image-small-selected')
        $('#music').addClass('description-image-small-selected')
      });
      $('#science').on('click', function(event) {
        $('#lesson_category').val('Science')
        $('.list-inline li').removeClass('description-image-small-selected')
        $('#science').addClass('description-image-small-selected')
      });
      $('#culture').on('click', function(event) {
        $('#lesson_category').val('Culture')
        $('.list-inline li').removeClass('description-image-small-selected')
        $('#culture').addClass('description-image-small-selected')
      });
      $('#finance').on('click', function(event) {
        $('#lesson_category').val('Finance')
        $('.list-inline li').removeClass('description-image-small-selected')
        $('#finance').addClass('description-image-small-selected')
      });
      $('#language').on('click', function(event) {
        $('#lesson_category').val('Language')
        $('.list-inline li').removeClass('description-image-small-selected')
        $('#language').addClass('description-image-small-selected')
      });
      $('#sport').on('click', function(event) {
        $('#lesson_category').val('Sport')
        $('.list-inline li').removeClass('description-image-small-selected')
        $('#sport').addClass('description-image-small-selected')
      });
      $('#startup').on('click', function(event) {
        $('#lesson_category').val('Entrepreneurship')
        $('.list-inline li').removeClass('description-image-small-selected')
        $('#startup').addClass('description-image-small-selected')
      });
    });
  <% end %>
<% end %>
